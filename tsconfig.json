{
  "files": [
    "./index.ts"
  ],
  "exclude": [ "node_modules/" ],
  "compilerOptions": {
    "baseUrl": "",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "inlineSources": false,
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "target": "es5"
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
